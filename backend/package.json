{
  "name": "matron",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "start": "ts-node-dev --project tsconfig.development.json --tree-kill --no-notify --respawn --transpile-only src/index.ts",
    "generate": "yarn -s run generate:prisma && yarn -s run generate:nexus",
    "generate:prisma": "prisma2 generate",
    "generate:nexus": "ts-node --project tsconfig.development.json --transpile-only src/graphql/schema",
    "migration:create": "prisma2 migrate save --experimental",
    "migration:apply": "prisma2 migrate up --experimental"
  },
  "dependencies": {
    "@prisma/client": "2.0.0-preview023",
    "@types/dotenv-flow": "^3.0.0",
    "apollo-server": "^2.9.7",
    "dotenv-flow": "^3.1.0",
    "graphql": "^14.5.8",
    "morphism": "^1.12.2",
    "winston": "^3.2.1",
    "winston-elasticsearch": "^0.8.5",
    "nexus": "0.12.0-rc.13",
    "nexus-prisma": "0.11.1"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-decorators": "^7.7.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-typescript": "^7.6.0",
    "@babel/runtime": "^7.7.2",
    "@types/node": "^12.12.5",
    "@types/webpack": "^4.39.8",
    "babel-loader": "^8.0.6",
    "babel-plugin-transform-typescript-metadata": "^0.2.2",
    "fork-ts-checker-webpack-plugin": "^3.0.1",
    "husky": ">=1",
    "lint-staged": ">=8",
    "nodemon": "^1.19.4",
    "nodemon-webpack-plugin": "^4.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "prisma2": "2.0.0-preview023",
    "react-dev-utils": "^9.1.0",
    "ts-node": "^8.4.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-node-externals": "^1.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --write"
    ]
  }
}
